{
    "name": "svg-smoother",
    "version": "1.0.1",
    "description": "Smooth SVG paths",
    "files": [
        "dist/**/*"
    ],
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        "import": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.mjs"
        },
        "require": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "test": "nyc mocha",
        "clean": "rimraf ./lib",
        "build": "npm run clean && npm run build:js",
        "build:js": "tsup src/index.ts --format cjs,esm --dts --clean",
        "build:examples": "node ./scripts/generateExamples.mjs",
        "prepack": "npm run build",
        "format": "prettier --write src public",
        "lint": "eslint . --ext .ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dispossible/svg-smoother.git"
    },
    "author": {
        "name": "Dispossible",
        "email": "mail+npm@dispossible.com",
        "url": "https://dispossible.com"
    },
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/dispossible/svg-smoother/issues"
    },
    "homepage": "https://github.com/dispossible/svg-smoother#readme",
    "devDependencies": {
        "@types/chai": "^4.3.4",
        "@types/jsdom": "^21.1.0",
        "@types/mocha": "^10.0.1",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "chai": "^4.3.7",
        "eslint": "^8.35.0",
        "eslint-config-prettier": "^8.6.0",
        "jsdom": "^21.1.0",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "prettier": "^2.8.4",
        "rimraf": "^4.1.3",
        "ts-node": "^10.9.1",
        "tsup": "^6.6.3",
        "typescript": "^4.9.5"
    },
    "release": {
        "branches": [
            "main"
        ]
    },
    "publishConfig": {
        "access": "public"
    }
}
